# ============================================
# 环境配置
# ============================================
# 运行环境：dev（开发）或 prod（生产）
# ⚠️ 生产环境必须设置为 prod
SPRING_PROFILES_ACTIVE=dev

# ========================================
# 数据库配置
# ========================================
DB_URL=jdbc:mysql://localhost:3306/game_db?useSSL=false&serverTimezone=UTC&characterEncoding=UTF-8&allowPublicKeyRetrieval=true
DB_USERNAME=gameuser
# ⚠️ 生产环境必须修改！使用强密码（至少12位，包含大小写字母、数字、特殊字符）
DB_PASSWORD=change_this_in_production_12345!

# ========================================
# Redis 配置
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
# ⚠️ 生产环境必须设置 Redis 密码！
REDIS_PASSWORD=change_this_redis_password_123!

# ========================================
# JWT 配置
# ========================================
# ⚠️ 生产环境必须修改！使用以下命令生成：
#    openssl rand -base64 64
# 示例强密钥（请勿直接使用）：
JWT_SECRET=ASs1lFo9DPTpbqnfyN/JXCvcnCHt9j0acKGWxI3WdbBgz4+c0sMMnpLYPg3ByF/7t11JslTmI40U/JoqWBwf5w==
JWT_EXPIRATION=86400000

# ========================================
# CORS 配置
# ========================================
# ⚠️ 生产环境必须修改为实际域名！
# 开发环境示例：
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# 生产环境示例（取消注释并修改）：
# CORS_ALLOWED_ORIGINS=https://yourgame.com,https://www.yourgame.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_MAX_AGE=3600

# ========================================
# 服务器配置（可选）
# ========================================
SERVER_PORT=8080
